{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "module": "ESNext",
    "target": "ES2020",
    "rootDir": "./",
    "resolveJsonModule": true,
    "removeComments": true,
    "outDir": "./dist",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "incremental": true,
    "noImplicitAny": false
  },
  "exclude": ["node_modules", "./test", "./dist", "./prisma"],
  "include": [
    "src/**/*",
    "src/**/*.json"
  ]
}
